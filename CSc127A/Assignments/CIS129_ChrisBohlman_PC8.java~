  //Function that the array is passed by reference to
  public static void selectionSort(Integer[] scores) {
    Integer Size = 10;
   Integer startScan;
integer minIndex;
Integer minValue;
Integer index;

for (startScan = 0; startscan < Size-2; startScan++) {
 minIndex = startScan;
 minValue = scores[startScan];

 for index = startScan + 1 to arraySize - 1
  If array[index] < minValue Then
   Set minValue = array[index]
   Set minIndex = index
  End If
 End For
 
 call swap(array[minIndex], array[startScan]
End For
  }
